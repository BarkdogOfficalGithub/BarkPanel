<!DOCTYPE html>
<html>
<head>
    <!--Import materialize.css-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.96.1/css/materialize.min.css">
    <link rel="stylesheet" href="/term.css">
    {{#if dark}}
        <link rel="stylesheet" href="/dark.css">
    {{/if}}
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no"/>

    <style>
        body {
            display: flex;
            min-height: 100vh;
            flex-direction: column;
        }

        main {
            flex: 1 0 auto;
        }

        .container {
            width: 100% !important;
        }

        .input-field {
            position: relative;
            margin-top: 0rem;
            background-color: #000;
            color: #fff;
        }

        #cmd_box {
            height: 32px;
        }

    </style>
</head>

<body>

<nav>
    <div class="nav-wrapper container">
        <a href="#" data-activates="mobile-demo" class="button-collapse"><i class="material-icons">menu</i></a>
        <a href="#" class="brand-logo">JPanel</a>
        <ul id="nav-mobile" class="right hide-on-med-and-down">
            <li><a href="/">Home</a></li>
            <li><a href="/players">Online Players</a></li>
            <li><a href="/files">File manager</a></li>
            <li><a href="">Permissions manager</a></li>
            <li><a href="/switchtheme">Change Theme</a></li>
        </ul>

        <ul class="side-nav" id="mobile-demo">
            <li><a href="/">Home</a></li>
            <li><a href="/players">Online Players</a></li>
            <li><a href="/files">File manager</a></li>
            <li><a href="">Permissions manager</a></li>
            <li><a href="/switchtheme">Change Theme</a></li>
        </ul>
    </div>
</nav>

<main>
    <div class="container">
        <div class="row">
            <div class="col s12 m8">
                <h4>Terminal</h4>

                <div id="term"></div>

                <form id="cmd_form">
                    <div class="input-field col s12">
                        <i class="material-icons prefix">chevron_right</i>
                        <input id="cmd_box"
                               autocapitalize="off"
                               autocorrect="off"
                               placeholder="Execute a command..." type="text" class="validate">
                    </div>
                </form>
            </div>
            <div class="col s12 m4">
                <h4>Server Stats</h4>

                <h5>CPU Usage</h5>
                <p id="cpu-text">loading...</p>
                <div class="progress">
                    <div id="cpu" class="indeterminate"></div>
                </div>

                <h5>RAM Usage</h5>
                <p id="ram-text">loading...</p>
                <div class="progress">
                    <div id="ram" class="indeterminate"></div>
                </div>

                <h5>Server TPS</h5>
                <p id="tps-text">loading...</p>
                <div class="progress">
                    <div id="tps" class="indeterminate"></div>
                </div>
            </div>
        </div>
    </div>
</main>


<!-- Page Content goes here -->
<footer class="page-footer">
    <div class="footer-copyright">
        <div class="container">
            Made by rymate1234
            <a class="grey-text text-lighten-4 right" href="#!">Server Version: {{version}}</a>
        </div>
    </div>
</footer>

<!--Import jQuery before materialize.js-->
<script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
<script type="text/javascript" src="/mousewheel.js"></script>
<script type="text/javascript" src="/term.js"></script>
<script type="text/javascript" src="/index.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.96.1/js/materialize.min.js"></script>

<script>
    $(document).ready(function () {
        $(".button-collapse").sideNav();
    });
</script>
</body>
</html>